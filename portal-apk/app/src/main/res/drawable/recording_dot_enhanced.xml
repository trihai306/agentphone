<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#40FF4757" />
            <size
                android:width="14dp"
                android:height="14dp" />
        </shape>
    </item>
    <!-- Inner solid dot -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#FFFF4757" />
        </shape>
    </item>
</layer-list>
