<?xml version="1.0" encoding="utf-8"?>
<!-- Smart Pill Glassmorphic Background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base dark background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <solid android:color="#F2171923" />
        </shape>
    </item>
    <!-- Subtle inner glow -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="27dp" />
            <gradient
                android:angle="135"
                android:startColor="#1AFFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#0DFFFFFF"
                android:type="linear" />
        </shape>
    </item>
    <!-- Outer border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <stroke
                android:width="1dp"
                android:color="#26FFFFFF" />
        </shape>
    </item>
</layer-list>
