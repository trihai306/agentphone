<?xml version="1.0" encoding="utf-8"?>
<!-- Animated status indicator selector with smooth transition support.
     The enterFadeDuration and exitFadeDuration provide smooth cross-fade animations
     between states (200ms, as per Material Design guidelines for state changes).

     State mapping:
     - state_focused=true + state_selected=true: Pending (loading/in-progress)
     - state_focused=true: Warning
     - state_enabled=true + state_activated=true: On/Active
     - default: Off/Inactive
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="200"
    android:exitFadeDuration="200">

    <!-- Pending state: displayed when both focused and selected -->
    <item
        android:state_focused="true"
        android:state_selected="true"
        android:drawable="@drawable/status_indicator_pending" />

    <!-- Warning state: displayed when view is focused -->
    <item
        android:state_focused="true"
        android:drawable="@drawable/status_indicator_warning" />

    <!-- Active/On state: displayed when enabled and activated -->
    <item
        android:state_enabled="true"
        android:state_activated="true"
        android:drawable="@drawable/status_indicator_on" />

    <!-- Off/Inactive state: default when not activated -->
    <item
        android:drawable="@drawable/status_indicator_off" />

</selector>
