<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bubbleContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F0171923"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        app:strokeColor="#33FFFFFF"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="14dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_recording_bubble_gradient">

            <!-- Recording Indicator with pulse ring -->
            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical">

                <!-- Outer pulse ring (animated) -->
                <View
                    android:id="@+id/pulseRing"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/recording_pulse_ring"
                    android:alpha="0.5" />

                <!-- Inner recording dot -->
                <View
                    android:id="@+id/recordingDot"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:background="@drawable/recording_dot_enhanced" />

            </FrameLayout>

            <!-- Stats Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:gravity="start">

                <!-- Event Count Row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvEventCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.02" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="events"
                        android:textSize="11sp"
                        android:textColor="#99FFFFFF"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- Duration Row -->
                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="11sp"
                    android:textColor="#66FFFFFF"
                    android:fontFamily="sans-serif-mono"
                    android:letterSpacing="0.05" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="#33FFFFFF" />

            <!-- Quick Actions Button -->
            <FrameLayout
                android:id="@+id/btnQuickActions"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_quick_action_bubble_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/ivQuickActions"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_grid_actions"
                    android:contentDescription="Quick actions"
                    app:tint="#99FFFFFF" />

            </FrameLayout>

            <!-- Stop Button -->
            <FrameLayout
                android:id="@+id/btnStop"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_stop_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/ivStop"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_stop_circle"
                    android:contentDescription="Stop recording"
                    app:tint="#FFFFFF" />

            </FrameLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
