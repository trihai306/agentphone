<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface_dark"
        android:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="CLICKAI"
            app:titleTextColor="@color/text_primary"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.Portal.Headline"
            app:menu="@menu/main_menu" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- ============================================================ -->
            <!-- CONNECTION STATUS CARD (Merged: Account + Service Status)   -->
            <!-- ============================================================ -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardConnection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/surface_elevated"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- User Info Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- User Avatar -->
                        <FrameLayout
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/icon_container_background"
                            android:backgroundTint="@color/accent_blue_container">

                            <TextView
                                android:id="@+id/tvUserInitials"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="A"
                                android:textSize="22sp"
                                android:textColor="@color/accent_blue"
                                android:fontFamily="sans-serif-medium" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <!-- User Name + Connection Badge -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/tvUserName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Admin"
                                    android:textSize="18sp"
                                    android:textColor="@color/text_primary"
                                    android:fontFamily="sans-serif-medium" />

                                <!-- Connection Status Dot -->
                                <View
                                    android:id="@+id/indicatorConnection"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_marginStart="10dp"
                                    android:background="@drawable/status_indicator_on" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvUserEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="admin@example.com"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="2dp" />

                            <!-- Device ID Row -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="6dp">

                                <TextView
                                    android:id="@+id/tvDeviceId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ID: Loading..."
                                    android:textSize="11sp"
                                    android:textColor="@color/text_tertiary"
                                    android:fontFamily="monospace" />

                                <ImageView
                                    android:id="@+id/btnCopyDeviceId"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_copy"
                                    app:tint="@color/text_tertiary"
                                    android:layout_marginStart="8dp"
                                    android:padding="2dp"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:contentDescription="Copy Device ID" />

                            </LinearLayout>

                            <!-- Build Time -->
                            <TextView
                                android:id="@+id/tvBuildTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Build: ---"
                                android:textSize="10sp"
                                android:textColor="@color/accent_blue"
                                android:fontFamily="monospace"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Connected Badge -->
                        <LinearLayout
                            android:id="@+id/badgeConnected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:background="@drawable/version_badge_background"
                            android:backgroundTint="@color/accent_green_container">

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/recording_dot"
                                android:backgroundTint="@color/accent_green" />

                            <TextView
                                android:id="@+id/tvConnectionStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Connected"
                                android:textSize="11sp"
                                android:textColor="@color/accent_green"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginStart="6dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/divider" />

                    <!-- Compact Service Status Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Accessibility -->
                        <LinearLayout
                            android:id="@+id/statusAccessibilityContainer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true">

                            <View
                                android:id="@+id/indicatorAccessibility"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/status_indicator_off" />

                            <TextView
                                android:id="@+id/statusAccessibility"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Access"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginStart="6dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="24dp"
                            android:background="@color/divider" />

                        <!-- Keyboard -->
                        <LinearLayout
                            android:id="@+id/statusKeyboardContainer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true">

                            <View
                                android:id="@+id/indicatorKeyboard"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/status_indicator_off" />

                            <TextView
                                android:id="@+id/statusKeyboard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Keyboard"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginStart="6dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="24dp"
                            android:background="@color/divider" />

                        <!-- Overlay -->
                        <LinearLayout
                            android:id="@+id/statusOverlayContainer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true">

                            <View
                                android:id="@+id/indicatorOverlay"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/status_indicator_off" />

                            <TextView
                                android:id="@+id/statusOverlay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Overlay"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginStart="6dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Helper Text -->
                    <TextView
                        android:id="@+id/tvPermissionHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tap any warning indicator to fix"
                        android:textSize="11sp"
                        android:textColor="@color/text_tertiary"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ============================================================ -->
            <!-- LIVE JOB MONITOR CARD                                        -->
            <!-- ============================================================ -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardJobMonitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/surface_elevated"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="LIVE JOB MONITOR"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary"
                            android:fontFamily="sans-serif-medium"
                            android:textAllCaps="true"
                            android:letterSpacing="0.12" />

                        <ImageView
                            android:id="@+id/btnRefreshJobs"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="6dp"
                            android:src="@drawable/ic_refresh"
                            app:tint="@color/text_tertiary"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="Refresh jobs" />

                    </LinearLayout>

                    <!-- Active Job Container (shown when job is running) -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardActiveJob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="#1A60A5FA"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Job Title -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <View
                                    android:id="@+id/indicatorJobRunning"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:background="@drawable/recording_dot"
                                    android:backgroundTint="@color/accent_blue" />

                                <TextView
                                    android:id="@+id/tvActiveJobName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="10dp"
                                    android:text="Running workflow..."
                                    android:textSize="15sp"
                                    android:textColor="@color/text_primary"
                                    android:fontFamily="sans-serif-medium"
                                    android:maxLines="1"
                                    android:ellipsize="end" />

                            </LinearLayout>

                            <!-- Step Info -->
                            <TextView
                                android:id="@+id/tvActiveJobStep"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="Step 1 of 5 â€¢ Tap button"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary" />

                            <!-- Progress Bar -->
                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progressJob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                app:trackThickness="6dp"
                                app:trackCornerRadius="3dp"
                                app:indicatorColor="@color/accent_blue"
                                app:trackColor="#1A60A5FA" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Idle State (shown when no job running) -->
                    <LinearLayout
                        android:id="@+id/layoutIdleState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¤"
                            android:textSize="32sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Waiting for commands..."
                            android:textSize="15sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"
                        android:background="@color/divider" />

                    <!-- Today Stats Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Completed -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvJobsCompleted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textColor="@color/accent_green"
                                android:fontFamily="sans-serif-bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" done"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  â€¢  "
                            android:textSize="14sp"
                            android:textColor="@color/text_tertiary" />

                        <!-- Failed -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvJobsFailed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textColor="#EF4444"
                                android:fontFamily="sans-serif-bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" failed"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ============================================================ -->
            <!-- RECORDING CONTROLS CARD                                      -->
            <!-- ============================================================ -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRecording"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/surface_elevated"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/icon_container_background"
                            android:backgroundTint="@color/accent_red_container">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_record"
                                app:tint="@color/accent_red" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="WORKFLOW RECORDING"
                            android:textSize="12sp"
                            android:textColor="@color/accent_red"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.1" />

                        <!-- Recording Status Dot -->
                        <View
                            android:id="@+id/recordingDot"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/status_indicator_off"
                            android:visibility="gone" />

                    </LinearLayout>

                    <!-- Idle State - Start Recording Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStartRecording"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸŽ¬  Start Recording"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/accent_red"
                        app:cornerRadius="16dp"
                        app:rippleColor="@color/accent_red_container" />

                    <!-- Recording State - Controls -->
                    <LinearLayout
                        android:id="@+id/layoutRecordingActive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- Recording Info -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/toggle_container_background"
                            android:layout_marginBottom="12dp">

                            <View
                                android:id="@+id/recordingPulse"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/status_indicator_on" />

                            <TextView
                                android:id="@+id/tvRecordingStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="Recording..."
                                android:textSize="15sp"
                                android:textColor="@color/accent_green"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="â€¢"
                                android:textSize="15sp"
                                android:textColor="@color/text_tertiary" />

                            <TextView
                                android:id="@+id/tvEventCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="0 events"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <!-- Control Buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Pause/Resume Button -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnPauseRecording"
                                style="@style/Widget.Portal.Button.Tonal"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="Pause"
                                android:textSize="14sp"
                                app:icon="@drawable/ic_pause"
                                app:iconGravity="textStart"
                                app:iconPadding="8dp" />

                            <!-- Stop Button -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnStopRecording"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Stop"
                                android:textSize="14sp"
                                android:textColor="@color/accent_red"
                                app:icon="@drawable/ic_stop"
                                app:iconTint="@color/accent_red"
                                app:iconGravity="textStart"
                                app:iconPadding="8dp"
                                app:backgroundTint="@color/accent_red_container"
                                app:cornerRadius="12dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ============================================================ -->
            <!-- DEVELOPER TOOLS CARD                                         -->
            <!-- ============================================================ -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDeveloperTools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/surface_elevated"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/icon_container_background"
                            android:backgroundTint="@color/accent_orange_container">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_code"
                                app:tint="@color/accent_orange" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="DEVELOPER TOOLS"
                            android:textSize="12sp"
                            android:textColor="@color/accent_orange"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.1" />

                    </LinearLayout>

                    <!-- Toggle Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Show Bounds Toggle -->
                        <LinearLayout
                            android:id="@+id/toggleBoundsContainer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/toggle_container_background"
                            android:padding="16dp">

                            <FrameLayout
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:background="@drawable/icon_container_background"
                                android:backgroundTint="@color/accent_blue_container">

                                <ImageView
                                    android:id="@+id/iconBounds"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_bounds"
                                    app:tint="@color/accent_blue" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Bounds"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif-medium" />

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/switchBounds"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                        <!-- Show Indexes Toggle -->
                        <LinearLayout
                            android:id="@+id/toggleIndexesContainer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/toggle_container_background"
                            android:padding="16dp">

                            <FrameLayout
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:background="@drawable/icon_container_background"
                                android:backgroundTint="@color/accent_purple_container">

                                <ImageView
                                    android:id="@+id/iconIndexes"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_index"
                                    app:tint="@color/accent_purple" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Indexes"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif-medium" />

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/switchIndexes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ============================================================ -->
            <!-- QUICK ACTIONS CARD (Optional)                                -->
            <!-- ============================================================ -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQuickActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/surface_elevated"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <!-- Refresh Status Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRefresh"
                        style="@style/Widget.Portal.Button.Tonal"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="Refresh"
                        android:textSize="13sp"
                        app:icon="@drawable/ic_refresh"
                        app:iconGravity="textStart"
                        app:iconPadding="6dp" />

                    <!-- Job History Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnJobHistory"
                        style="@style/Widget.Portal.Button.Tonal"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="History"
                        android:textSize="13sp"
                        app:icon="@drawable/ic_history"
                        app:iconGravity="textStart"
                        app:iconPadding="6dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
