<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- App Bar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface_dark"
            android:elevation="0dp"
            app:title="Settings"
            app:titleTextColor="@color/text_primary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/text_primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="24dp">

            <!-- Appearance Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appearance"
                android:textSize="13sp"
                android:textColor="@color/accent_cyan"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/surface_elevated"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Dark Mode Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dark Mode"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Use dark theme for the app"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchDarkMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:thumbTint="@color/white"
                            app:trackTint="@color/accent_cyan" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Recording Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recording"
                android:textSize="13sp"
                android:textColor="@color/accent_blue"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/surface_elevated"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Auto Screenshot Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Auto Screenshot"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Capture screenshots during recording"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchAutoScreenshot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:thumbTint="@color/white"
                            app:trackTint="@color/accent_blue" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_subtle"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Screenshot Quality Slider -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Screenshot Quality"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tvQualityValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80%"
                                android:textSize="14sp"
                                android:textColor="@color/accent_blue"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderQuality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="50"
                            android:valueTo="100"
                            android:stepSize="10"
                            android:value="80"
                            app:thumbColor="@color/accent_blue"
                            app:trackColorActive="@color/accent_blue"
                            app:trackColorInactive="@color/surface_container_high"
                            app:haloColor="@color/accent_blue_container" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_subtle"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Max Events Slider -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Max Events Per Session"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tvMaxEventsValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1000"
                                android:textSize="14sp"
                                android:textColor="@color/accent_blue"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderMaxEvents"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="100"
                            android:valueTo="5000"
                            android:stepSize="100"
                            android:value="1000"
                            app:thumbColor="@color/accent_blue"
                            app:trackColorActive="@color/accent_blue"
                            app:trackColorInactive="@color/surface_container_high"
                            app:haloColor="@color/accent_blue_container" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <!-- Shortcuts Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shortcuts"
                android:textSize="13sp"
                android:textColor="@color/accent_purple"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/surface_elevated"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Volume Shortcuts Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Volume Button Shortcuts"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Double/triple press volume buttons for actions"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchVolumeShortcuts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:thumbTint="@color/white"
                            app:trackTint="@color/accent_purple" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_subtle"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Configure Shortcuts Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnConfigureShortcuts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Configure Shortcuts"
                        android:textSize="14sp"
                        android:textColor="@color/accent_purple"
                        app:icon="@drawable/ic_settings_quick"
                        app:iconTint="@color/accent_purple"
                        app:iconGravity="start"
                        app:backgroundTint="@color/accent_purple_container"
                        app:cornerRadius="12dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        style="@style/Widget.Material3.Button.TonalButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Storage Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Storage"
                android:textSize="13sp"
                android:textColor="@color/accent_orange"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/surface_elevated"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Storage Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Screenshots"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tvScreenshotCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 files â€¢ 0 MB"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClearScreenshots"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:text="Clear"
                            android:textSize="13sp"
                            android:textColor="@color/accent_red"
                            app:backgroundTint="@color/accent_red_container"
                            app:cornerRadius="10dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            style="@style/Widget.Material3.Button.TonalButton" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Advanced Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Advanced"
                android:textSize="13sp"
                android:textColor="@color/text_tertiary"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/surface_elevated"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Export Settings -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExportSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Export Settings"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:gravity="start|center_vertical"
                        app:icon="@drawable/ic_export"
                        app:iconTint="@color/text_secondary"
                        app:iconGravity="start"
                        app:backgroundTint="@android:color/transparent"
                        app:rippleColor="@color/accent_blue_container"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        style="@style/Widget.Material3.Button.TextButton" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_subtle" />

                    <!-- Import Settings -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnImportSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Import Settings"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:gravity="start|center_vertical"
                        app:icon="@drawable/ic_export"
                        app:iconTint="@color/text_secondary"
                        app:iconGravity="start"
                        app:backgroundTint="@android:color/transparent"
                        app:rippleColor="@color/accent_blue_container"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        style="@style/Widget.Material3.Button.TextButton" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_subtle" />

                    <!-- Reset to Defaults -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnResetDefaults"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reset to Defaults"
                        android:textSize="14sp"
                        android:textColor="@color/accent_red"
                        android:gravity="start|center_vertical"
                        app:icon="@drawable/ic_delete"
                        app:iconTint="@color/accent_red"
                        app:iconGravity="start"
                        app:backgroundTint="@android:color/transparent"
                        app:rippleColor="@color/accent_red_container"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        style="@style/Widget.Material3.Button.TextButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Debug Tools Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debug Tools"
                android:textSize="13sp"
                android:textColor="@color/accent_blue"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/surface_elevated"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Show Element Bounds Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <FrameLayout
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/icon_container_background"
                            android:backgroundTint="@color/accent_blue_container">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_bounds"
                                app:tint="@color/accent_blue"
                                android:contentDescription="Bounds overlay" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Show Element Bounds"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Highlight interactive elements on screen"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchBounds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_subtle"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Show Element Indexes Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <FrameLayout
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/icon_container_background"
                            android:backgroundTint="@color/accent_purple_container">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_index"
                                app:tint="@color/accent_purple"
                                android:contentDescription="Index labels" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Show Element Indexes"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Display numbered labels on UI nodes"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchIndexes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
