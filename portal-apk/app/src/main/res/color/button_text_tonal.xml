<?xml version="1.0" encoding="utf-8"?>
<!-- Tonal button text color selector with states -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled state -->
    <item android:color="@color/text_disabled" android:state_enabled="false"/>
    <!-- Pressed state -->
    <item android:color="@color/accent_blue_dark" android:state_pressed="true"/>
    <!-- Default state -->
    <item android:color="@color/accent_blue"/>
</selector>
