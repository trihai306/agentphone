<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AgentPortal" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors - CLICKAI Brand Violet -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryContainer">@color/brand_primary_container</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/brand_primary</item>

        <!-- Secondary colors - CLICKAI Blue -->
        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorSecondaryContainer">@color/brand_secondary_container</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/brand_secondary</item>

        <!-- Tertiary colors - Cyan Accent -->
        <item name="colorTertiary">@color/brand_accent</item>
        <item name="colorTertiaryContainer">@color/accent_cyan_container</item>
        <item name="colorOnTertiary">@color/background_dark</item>
        <item name="colorOnTertiaryContainer">@color/brand_accent</item>

        <!-- Background and surface - Premium Dark -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_elevated</item>
        <item name="colorSurfaceContainer">@color/surface_container</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Error -->
        <item name="colorError">@color/accent_red</item>
        <item name="colorErrorContainer">@color/accent_red_container</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnErrorContainer">@color/accent_red</item>

        <!-- Outline -->
        <item name="colorOutline">@color/border_default</item>
        <item name="colorOutlineVariant">@color/divider</item>

        <!-- Status bar (Dark mode - light icons) -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Portal.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Portal.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Portal.Large</item>

        <!-- Switch colors -->
        <item name="colorSwitchThumbNormal">@color/surface_container</item>
        <item name="android:colorControlActivated">@color/brand_primary</item>
    </style>


    <!-- Shape appearances -->
    <style name="ShapeAppearance.Portal.Small" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Portal.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.Portal.Large" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- ==================== Text Appearances ==================== -->
    <!-- Complete Material Design 3 type scale with enhanced hierarchy -->

    <!-- Display - For hero text, splash screens, large prominent text -->
    <style name="TextAppearance.Portal.Display.Large" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">57sp</item>
        <item name="android:lineHeight">64sp</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.025</item>
    </style>

    <style name="TextAppearance.Portal.Display.Medium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">45sp</item>
        <item name="android:lineHeight">52sp</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Portal.Display.Small" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textSize">36sp</item>
        <item name="android:lineHeight">44sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Headline - For section headers, prominent titles -->
    <style name="TextAppearance.Portal.Headline.Large" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight">40sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Legacy: TextAppearance.Portal.Headline maps to Medium for backwards compatibility -->
    <style name="TextAppearance.Portal.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">32sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Portal.Headline.Medium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">32sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Portal.Headline.Small" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Title - For card titles, dialog titles, list item headers -->
    <style name="TextAppearance.Portal.Title.Large" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Legacy: TextAppearance.Portal.Title maps to Medium for backwards compatibility -->
    <style name="TextAppearance.Portal.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Portal.Title.Medium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Portal.Title.Small" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Body - For main content, paragraphs, descriptions -->
    <style name="TextAppearance.Portal.Body.Large" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <!-- Legacy: TextAppearance.Portal.Body maps to Medium for backwards compatibility -->
    <style name="TextAppearance.Portal.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="TextAppearance.Portal.Body.Medium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="TextAppearance.Portal.Body.Small" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <!-- Label - For buttons, chips, tags, form labels -->
    <style name="TextAppearance.Portal.Label.Large" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Legacy: TextAppearance.Portal.Label maps to Medium for backwards compatibility -->
    <style name="TextAppearance.Portal.Label" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <style name="TextAppearance.Portal.Label.Medium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Portal.Label.Small" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <!-- Specialized text styles for specific use cases -->

    <!-- Caption - For helper text, timestamps, metadata -->
    <style name="TextAppearance.Portal.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">11sp</item>
        <item name="android:lineHeight">14sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <!-- Overline - For section labels, category tags -->
    <style name="TextAppearance.Portal.Overline" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">10sp</item>
        <item name="android:lineHeight">14sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <!-- Button text - For button labels -->
    <style name="TextAppearance.Portal.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Status text - For status indicators, connection info -->
    <style name="TextAppearance.Portal.Status" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">13sp</item>
        <item name="android:lineHeight">18sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Code/Monospace - For IP addresses, ports, technical info -->
    <style name="TextAppearance.Portal.Code" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">13sp</item>
        <item name="android:lineHeight">18sp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Accent text - For emphasized or highlighted text -->
    <style name="TextAppearance.Portal.Accent" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/accent_blue</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- ==================== Button Styles ==================== -->
    <!-- Enhanced button styles with proper states and micro-interactions -->

    <!-- Base Button Style - Common properties for all buttons -->
    <style name="Widget.Portal.Button.Base" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Primary Button - Main CTA, filled style -->
    <style name="Widget.Portal.Button.Primary" parent="Widget.Portal.Button.Base">
        <item name="android:textColor">@color/background_dark</item>
        <item name="backgroundTint">@color/button_primary_selector</item>
        <item name="rippleColor">@color/button_ripple_primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="iconTint">@color/background_dark</item>
        <item name="iconPadding">8dp</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Primary Button Small - Compact version -->
    <style name="Widget.Portal.Button.Primary.Small">
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Primary Button Large - Prominent version -->
    <style name="Widget.Portal.Button.Primary.Large">
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Secondary Button - Less emphasis than primary -->
    <style name="Widget.Portal.Button.Secondary" parent="Widget.Portal.Button.Base">
        <item name="android:textColor">@color/text_primary</item>
        <item name="backgroundTint">@color/button_secondary_selector</item>
        <item name="rippleColor">@color/button_ripple_secondary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="iconTint">@color/icon_secondary</item>
        <item name="iconPadding">8dp</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Tonal Button - Medium emphasis with container color -->
    <style name="Widget.Portal.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="android:textColor">@color/accent_blue</item>
        <item name="backgroundTint">@color/button_tonal_selector</item>
        <item name="rippleColor">@color/button_ripple_tonal</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="iconTint">@color/accent_blue</item>
        <item name="iconPadding">8dp</item>
    </style>

    <!-- Tonal Button Small -->
    <style name="Widget.Portal.Button.Tonal.Small">
        <item name="android:minHeight">32dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Tonal Button - Secondary color variant -->
    <style name="Widget.Portal.Button.Tonal.Secondary" parent="Widget.Portal.Button.Tonal">
        <item name="android:textColor">@color/accent_cyan</item>
        <item name="backgroundTint">@color/accent_cyan_container</item>
        <item name="iconTint">@color/accent_cyan</item>
    </style>

    <!-- Tonal Button - Success variant -->
    <style name="Widget.Portal.Button.Tonal.Success" parent="Widget.Portal.Button.Tonal">
        <item name="android:textColor">@color/accent_green</item>
        <item name="backgroundTint">@color/accent_green_container</item>
        <item name="iconTint">@color/accent_green</item>
    </style>

    <!-- Tonal Button - Warning variant -->
    <style name="Widget.Portal.Button.Tonal.Warning" parent="Widget.Portal.Button.Tonal">
        <item name="android:textColor">@color/accent_orange</item>
        <item name="backgroundTint">@color/accent_orange_container</item>
        <item name="iconTint">@color/accent_orange</item>
    </style>

    <!-- Outlined Button - Low emphasis with border -->
    <style name="Widget.Portal.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="strokeColor">@color/button_outlined_stroke_selector</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/button_ripple_outlined</item>
        <item name="iconTint">@color/text_secondary</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Outlined Button Small -->
    <style name="Widget.Portal.Button.Outlined.Small">
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Outlined Button - Primary accent variant -->
    <style name="Widget.Portal.Button.Outlined.Primary" parent="Widget.Portal.Button.Outlined">
        <item name="android:textColor">@color/accent_blue</item>
        <item name="strokeColor">@color/accent_blue</item>
        <item name="iconTint">@color/accent_blue</item>
    </style>

    <!-- Text Button - Lowest emphasis, no background -->
    <style name="Widget.Portal.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/accent_blue</item>
        <item name="rippleColor">@color/button_ripple_text</item>
        <item name="iconTint">@color/accent_blue</item>
        <item name="iconPadding">8dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Text Button - Secondary variant -->
    <style name="Widget.Portal.Button.Text.Secondary" parent="Widget.Portal.Button.Text">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="iconTint">@color/text_secondary</item>
    </style>

    <!-- Danger Button - For destructive actions -->
    <style name="Widget.Portal.Button.Danger" parent="Widget.Portal.Button.Base">
        <item name="android:textColor">@color/background_dark</item>
        <item name="backgroundTint">@color/button_danger_selector</item>
        <item name="rippleColor">@color/button_ripple_danger</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="iconTint">@color/background_dark</item>
        <item name="iconPadding">8dp</item>
    </style>

    <!-- Danger Button - Tonal variant (less aggressive) -->
    <style name="Widget.Portal.Button.Danger.Tonal" parent="Widget.Portal.Button.Tonal">
        <item name="android:textColor">@color/accent_red</item>
        <item name="backgroundTint">@color/accent_red_container</item>
        <item name="iconTint">@color/accent_red</item>
    </style>

    <!-- Danger Button - Outlined variant -->
    <style name="Widget.Portal.Button.Danger.Outlined" parent="Widget.Portal.Button.Outlined">
        <item name="android:textColor">@color/accent_red</item>
        <item name="strokeColor">@color/accent_red</item>
        <item name="iconTint">@color/accent_red</item>
    </style>

    <!-- ==================== Icon Button Styles ==================== -->

    <!-- Icon Button - Standard size -->
    <style name="Widget.Portal.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/icon_secondary</item>
        <item name="rippleColor">@color/button_ripple_icon</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Icon Button Small -->
    <style name="Widget.Portal.IconButton.Small">
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="iconSize">20dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Icon Button Large -->
    <style name="Widget.Portal.IconButton.Large">
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="iconSize">28dp</item>
        <item name="android:padding">14dp</item>
    </style>

    <!-- Icon Button - Primary accent -->
    <style name="Widget.Portal.IconButton.Primary" parent="Widget.Portal.IconButton">
        <item name="iconTint">@color/accent_blue</item>
    </style>

    <!-- Icon Button - Filled style -->
    <style name="Widget.Portal.IconButton.Filled" parent="Widget.Material3.Button.IconButton.Filled">
