# ==============================================
# AGENT CONFIGURATION
# ==============================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Agent Settings
AGENT_DEVICE=emulator-5554
AGENT_MAX_STEPS=30
AGENT_DEBUG=false

# ==============================================
# PORTAL APK CONFIGURATION
# ==============================================

# Portal connection mode: tcp or content_provider
PORTAL_MODE=tcp

# Portal TCP settings (khi d√πng mode=tcp)
PORTAL_HOST=localhost
PORTAL_PORT=8080
PORTAL_TIMEOUT=10

# Portal package name
PORTAL_PACKAGE=com.agent.portal

# ==============================================
# SOKETI WEBSOCKET CONFIGURATION
# ==============================================

# Soketi / Pusher-compatible WebSocket settings
PUSHER_APP_KEY=app-key
PUSHER_APP_SECRET=app-secret
PUSHER_APP_CLUSTER=mt1
PUSHER_HOST=laravel-backend.test
PUSHER_PORT=6001
PUSHER_SCHEME=https
PUSHER_VERIFY_SSL=false  # Set to true in production with valid SSL certificate


# ==============================================
# ADB CONFIGURATION
# ==============================================

ADB_PATH=/Users/hainc/Library/Android/sdk/platform-tools/adb
ANDROID_HOME=/Users/hainc/Library/Android/sdk

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

DATABASE_URL=sqlite+aiosqlite:///./droidrun.db

# ==============================================
# SERVER CONFIGURATION
# ==============================================

API_HOST=0.0.0.0
API_PORT=8000

# ==============================================
# SCHEDULER CONFIGURATION
# ==============================================

SCHEDULER_TIMEZONE=Asia/Ho_Chi_Minh

# ==============================================
# LOGGING
# ==============================================

LOG_LEVEL=INFO

# ==============================================
# AUTHENTICATION CONFIGURATION
# ==============================================

# JWT (JSON Web Token) Settings
JWT_SECRET=your_jwt_secret_key_here_use_random_secure_string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Password Requirements
PASSWORD_MIN_LENGTH=8
