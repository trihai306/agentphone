<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Event Item Card -->
    <com.google.android.material.card.MaterialCardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/surface_elevated"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main Event Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <!-- Event Type Icon Container -->
                <FrameLayout
                    android:id="@+id/iconContainer"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/icon_container_background"
                    android:backgroundTint="@color/timeline_tap">

                    <ImageView
                        android:id="@+id/ivEventIcon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_tap_action"
                        app:tint="@color/text_primary"
                        android:contentDescription="Event type" />

                </FrameLayout>

                <!-- Event Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="12dp">

                    <!-- Event Type Title -->
                    <TextView
                        android:id="@+id/tvEventType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.01" />

                    <!-- Target Element -->
                    <TextView
                        android:id="@+id/tvTarget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Button: Submit"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="1" />

                    <!-- App Name or Package -->
                    <TextView
                        android:id="@+id/tvPackage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="com.example.app"
                        android:textSize="11sp"
                        android:textColor="@color/text_tertiary"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:maxLines="1" />

                </LinearLayout>

                <!-- Timestamp and Sequence -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <!-- Sequence Number Badge -->
                    <TextView
                        android:id="@+id/tvSequence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#1"
                        android:textSize="11sp"
                        android:textColor="@color/accent_blue"
                        android:fontFamily="sans-serif-medium"
                        android:background="@drawable/bg_event_badge"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp" />

                    <!-- Relative Timestamp -->
                    <TextView
                        android:id="@+id/tvTimestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+0.5s"
                        android:textSize="11sp"
                        android:textColor="@color/text_tertiary"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Screenshot Thumbnail (Only shown if available) -->
            <ImageView
                android:id="@+id/ivScreenshot"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="#1A1A1A"
                android:visibility="gone"
                android:contentDescription="Interaction screenshot" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
