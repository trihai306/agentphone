<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled state -->
    <item android:color="@color/text_disabled" android:state_enabled="false"/>
    <!-- Pressed state -->
    <item android:color="@color/accent_blue_dark" android:state_pressed="true"/>
    <!-- Focused state -->
    <item android:color="@color/accent_blue_light" android:state_focused="true"/>
    <!-- Default state -->
    <item android:color="@color/accent_blue"/>
</selector>
