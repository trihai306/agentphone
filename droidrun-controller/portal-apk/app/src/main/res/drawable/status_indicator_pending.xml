<?xml version="1.0" encoding="utf-8"?>
<!-- Enhanced status indicator for "pending" state with subtle glow effect -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow ring -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/status_pending_glow" />
            <size
                android:width="14dp"
                android:height="14dp" />
        </shape>
    </item>
    <!-- Inner solid indicator -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/status_pending" />
            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>
</layer-list>
